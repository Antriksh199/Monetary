<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="AdminController"
                   namespace="AdminController.DL.Entities">

	<class name="Card" table="Admin_User_Cards">

		<!-- Primary Key (assuming auto-generated) -->
		<id name="Id" column="Id">
			<generator class="sequence" >
				<param name="sequence">AdminUserCards_Id_Seq</param>
			</generator>
		</id>

		<!-- Reference to UserPaymentMethod -->
		<many-to-one name="UPaymentMethod"
					 column="U_PAYMENT_METHOD_ID"
					 class="UserPaymentMethod"
					 lazy ="proxy"
					 fetch="join"
					 cascade="all" />

		<property name="Provider" column="Provider" type="String" not-null="true" />
		<property name="CustomerName" column="name" type="String" not-null="true" />
		<property name="CardNumber" column="Card_Number" type="String" not-null="true" />
		<property name="CVV" column="CVV" type="int" not-null="true" />
		<property name="CardType" column="card_type" type="String" not-null="true" />
		<!-- DateOnly (requires a custom type or stored as Date) -->
		<property name="ExpiryDate"
				  column="Expiry_Date"
				  type="date" />
		<!-- or use a custom IUserType for DateOnly -->

		<property name="CreatedDate" column="created_date" type="DateTime"/>
		<property name="ModifiedDate" column="modified_date" type="DateTime" />
		<property name="CreatedBy" column="created_by" type="String" />
		<property name="ModifiedBy" column="modified_by" type="String" />

	</class>
</hibernate-mapping>
